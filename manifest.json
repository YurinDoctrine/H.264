{
  "name": "H.264",
  "version": "4.2.1",
  "manifest_version": 2,
  "description": "H.264 stream in YouTube instead of VP9/AV01",
  "homepage_url": "https://github.com/YurinDoctrine/H.264",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "H.264"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.youtube-nocookie.com/*",
        "*://*.youtu.be/*"
      ],
      "js": ["src/inject.js", "src/content_script.js", "src/options.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": ["storage"]
}
